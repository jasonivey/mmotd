  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug mmotd",
      "program": "${workspaceFolder}/build/apps/mmotd/mmotd",
      "args": [
        "-c",
        "../config/mmotd_config.toml"
      ],
      "cwd": "${workspaceFolder}/build"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug test runner",
      "program": "${workspaceFolder}/build/test/mmotd_test",
      "args": [
        "[assertion]"
      ],
      "cwd": "${workspaceFolder}/build"
    }
  ]
}
